/* pages/doctor/auth/auth.wxss */
page {
  background: linear-gradient(180deg, #F0F7FF 0%, #FFFFFF 100%);
  min-height: 100vh;
}

.page-container {
  padding: 24rpx;
  min-height: 100vh;
}

/* 顶部说明区域 */
.header-section {
  text-align: center;
  margin-bottom: 24rpx;
  padding: 24rpx 0 16rpx;
}

.icon-wrapper {
  margin-bottom: 16rpx;
}

.header-icon {
  font-size: 64rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1A1A1A;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}

/* 提示卡片 */
.tip-card {
  background: linear-gradient(135deg, #E8F4FD 0%, #FFFFFF 100%);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: flex-start;
  border-left: 6rpx solid #4A90E2;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
}

.tip-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 6rpx;
}

.tip-text {
  font-size: 22rpx;
  color: #666666;
  line-height: 1.5;
}

/* 表单卡片 */
.form-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
}

.form-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1A1A1A;
  margin-bottom: 24rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
}

.label-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.label {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.required {
  color: #FF4D4F;
  font-size: 26rpx;
  margin-left: 6rpx;
}

.input {
  width: 100%;
  height: 76rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #333333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #4A90E2;
  background: #FFFFFF;
}

.input::placeholder {
  color: #BBBBBB;
}

/* 上传区域 */
.upload-hint {
  font-size: 22rpx;
  color: #999999;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.upload-container {
  width: 100%;
  height: 220rpx;
  border: 2rpx dashed #D9D9D9;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
  background: #FAFAFA;
  transition: all 0.3s ease;
}

.upload-container:active {
  border-color: #4A90E2;
  background: #F0F7FF;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.upload-icon {
  font-size: 72rpx;
  margin-bottom: 12rpx;
  color: #999999;
  font-weight: 300;
}

.upload-text {
  font-size: 24rpx;
  color: #666666;
}

.image-preview {
  width: 100%;
  height: 100%;
  position: relative;
}

.image-preview image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.8);
}

.delete-icon {
  font-size: 36rpx;
  color: #FFFFFF;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 12rpx;
  margin-top: 24rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.25);
}

.submit-btn::after {
  border: none;
}

.submit-btn[loading] {
  background: linear-gradient(135deg, #94BEE5 0%, #7AA3D1 100%);
}

/* 底部说明 */
.footer-note {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.note-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.note-text {
  font-size: 22rpx;
  color: #999999;
  line-height: 1.4;
}