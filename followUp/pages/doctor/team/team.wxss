/* 医生团队页样式 - 现代化设计 */

page {
  background: linear-gradient(180deg, #e6f7ff 0%, #ffffff 100%);
  min-height: 100vh;
}

.page-container {
  padding: 24rpx;
  padding-bottom: 140rpx;
}

/* 分组标题 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.section-count {
  font-size: 24rpx;
  color: #718096;
  background: #edf2f7;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 团队成员列表 */
.team-list {
  margin-top: 8rpx;
}

.member-card {
  margin-bottom: 24rpx;
  padding: 28rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.member-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: linear-gradient(180deg, #1890ff 0%, #40a9ff 100%);
}

.member-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
  position: relative;
  margin-right: 20rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(24, 144, 255, 0.3);
}

.avatar-badge {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #fadb14, #ffa940);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  box-shadow: 0 4rpx 12rpx rgba(250, 219, 20, 0.4);
  border: 3rpx solid #ffffff;
}

.member-info {
  flex: 1;
}

.name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.role-tag {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  background: linear-gradient(135deg, #fff7e6, #ffe7ba);
  color: #faad14;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(250, 173, 20, 0.2);
}

.role-icon {
  font-size: 20rpx;
}

.member-body {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  align-items: center;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #f7fafc;
  padding: 10rpx 16rpx;
  border-radius: 12rpx;
  flex: 1;
}

.info-icon {
  font-size: 24rpx;
}

.info-text {
  font-size: 26rpx;
  color: #4a5568;
  flex: 1;
}

.member-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #edf2f7;
}

.stat-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
  padding: 10rpx 16rpx;
  border-radius: 12rpx;
  flex: 1;
}

.stat-badge .stat-icon {
  font-size: 24rpx;
  margin: 0;
  margin-bottom: 0;
}

.stat-text {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  margin-top: 80rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 12rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: #718096;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.empty-tips {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #edf2f7;
}

.tip-item {
  font-size: 24rpx;
  color: #4a5568;
  text-align: left;
  padding: 12rpx 20rpx;
  background: #f7fafc;
  border-radius: 12rpx;
  border-left: 4rpx solid #1890ff;
}

/* 添加成员按钮 */
.add-member-button {
  margin-bottom: 32rpx;
  height: 100rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 32rpx rgba(74, 144, 226, 0.35);
  position: relative;
  overflow: hidden;
}

.add-member-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.add-member-button:active::before {
  left: 100%;
}

.add-button-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 负责人卡片特殊样式 */
.leader-card {
  background: linear-gradient(135deg, #fff7e6 0%, #ffffff 100%);
  border: 2rpx solid #fadb14;
}

.leader-card::before {
  background: linear-gradient(180deg, #fadb14 0%, #ffa940 100%);
}

.leader-avatar {
  background: linear-gradient(135deg, #fadb14, #ffa940);
  box-shadow: 0 8rpx 20rpx rgba(250, 219, 20, 0.4);
}

.leader-tag {
  background: linear-gradient(135deg, #fff7e6, #ffe7ba);
  color: #faad14;
  box-shadow: 0 2rpx 8rpx rgba(250, 173, 20, 0.2);
}

.leader-stat {
  background: linear-gradient(135deg, #fff7e6, #ffe7ba);
}

.leader-stat .stat-text {
  color: #faad14;
}

/* 普通成员标签 */
.member-type-tag {
  display: inline-flex;
  align-items: center;
  background: linear-gradient(135deg, #e6f7ff, #bae7ff);
  color: #1890ff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

/* 右上角操作按钮 */
.member-actions {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 10;
}

.action-button {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
  transition: all 0.3s;
}

.action-button:active {
  background: rgba(0, 0, 0, 0.1);
  transform: scale(0.95);
}

/* 管理员卡片样式 */
.member-card.admin-card {
  border-left: 8rpx solid #52c41a;
}

.member-card.admin-card::before {
  background: linear-gradient(180deg, #52c41a 0%, #73d13d 100%);
}

/* 管理员标签 */
.admin-tag {
  background: linear-gradient(135deg, #f6ffed, #d9f7be) !important;
  color: #52c41a !important;
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 弹窗容器 */
.modal-container {
  width: 100%;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  overflow: hidden;
  animation: slideUp 0.3s ease;
  display: flex;
  flex-direction: column;
  max-height: 80vh;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 28rpx;
  border-bottom: 1rpx solid #edf2f7;
  background: linear-gradient(135deg, #f0f9ff, #ffffff);
  flex-shrink: 0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #718096;
  border-radius: 50%;
  background: #f7fafc;
}

/* 弹窗内容 */
.modal-body {
  flex: 1;
  overflow: hidden;
}

/* 医生列表 */
.doctor-list {
  height: 600rpx;
  padding: 16rpx 0 120rpx 0;
}

.doctor-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  transition: background 0.2s;
}

.doctor-item:active {
  background: #f7fafc;
}

.doctor-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.doctor-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.doctor-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d3748;
}

.doctor-detail {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #718096;
}

.doctor-hospital {
  color: #4a5568;
}

.doctor-separator {
  margin: 0 8rpx;
  color: #cbd5e0;
}

.doctor-department {
  color: #4a5568;
}

.doctor-title-tag {
  font-size: 22rpx;
  color: #4A90E2;
  background: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
  align-self: flex-start;
}

.doctor-status {
  margin-left: 16rpx;
  flex-shrink: 0;
}

.status-text {
  font-size: 24rpx;
  color: #52c41a;
  background: #f6ffed;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid #b7eb8f;
  font-weight: 500;
}

.add-icon {
  font-size: 40rpx;
  color: #4A90E2;
  font-weight: 300;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.doctor-item.added {
  background: #f6ffed;
  border-left: 4rpx solid #52c41a;
}

.doctor-item.disabled {
  opacity: 0.7;
}

.doctor-item.disabled:active {
  background: #f6ffed;
}

/* 空状态 */
.empty-doctor {
  padding: 80rpx 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-doctor .empty-icon {
  font-size: 96rpx;
}

.empty-doctor .empty-text {
  font-size: 28rpx;
  color: #718096;
}

/* 成员操作菜单 */
.action-menu-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  animation: fadeInMenu 0.3s ease;
}

@keyframes fadeInMenu {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.action-menu {
  width: 100%;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 24rpx 0;
  animation: slideUpMenu 0.3s ease;
}

@keyframes slideUpMenu {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.action-menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
  font-size: 30rpx;
  color: #333;
  transition: background 0.2s;
}

.action-menu-item:active {
  background: #f5f5f5;
}

.action-menu-item.danger {
  color: #ff4d4f;
}

.action-menu-item.cancel {
  border-top: 1rpx solid #f0f0f0;
  margin-top: 8rpx;
  padding-top: 28rpx;
  justify-content: center;
  color: #666;
}

.action-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.action-text {
  flex: 1;
}
