/* 医生首页样式 - 医疗主题 */

page {
  background: linear-gradient(180deg, #e6f7ff 0%, #ffffff 100%);
}

/* 自定义导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  z-index: 999;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.3);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 24rpx;
}

/* 左侧返回按钮 */
.nav-left {
  width: 80rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.back-icon {
  width: 44rpx;
  height: 44rpx;
  filter: brightness(0) invert(1);
}

/* 中间标题 */
.nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 1rpx;
}

/* 右侧占位 */
.nav-right {
  width: 80rpx;
}

.page-container {
  padding: 24rpx 24rpx 140rpx 24rpx;
  min-height: 100vh;
}

/* 统计卡片组 */
.stats-container {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.stat-card {
  flex: 1;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #1890ff 0%, #40a9ff 100%);
}

.stat-card-primary::before {
  background: linear-gradient(90deg, #1890ff 0%, #40a9ff 100%);
}

.stat-card-success::before {
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
}

.stat-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #718096;
  font-weight: 500;
}

/* 新建按钮 */
.create-button {
  margin-bottom: 32rpx;
  height: 100rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 32rpx rgba(24, 144, 255, 0.35);
  position: relative;
  overflow: hidden;
}

.create-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.create-button:active::before {
  left: 100%;
}

.create-button-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 分组标题 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.section-count {
  font-size: 24rpx;
  color: #718096;
  background: #edf2f7;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 随访计划列表 */
.plan-list {
  margin-top: 8rpx;
}

.plan-item {
  margin-bottom: 24rpx;
  padding: 28rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.plan-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: linear-gradient(180deg, #1890ff 0%, #40a9ff 100%);
}

.plan-status-badge {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #ffffff;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.plan-body {
  margin-bottom: 20rpx;
}

.plan-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.plan-description {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.plan-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.plan-stat-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: #f7fafc;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.plan-stat-item .stat-icon {
  font-size: 24rpx;
}

.plan-stat-item .stat-text {
  font-size: 24rpx;
  color: #4a5568;
}

.plan-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #edf2f7;
}

.arrow-icon {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 500;
  white-space: nowrap;
}

/* 空状态 */
.empty-state {
  margin-top: 80rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 12rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: #718096;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.empty-tips {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #edf2f7;
}

.tip-item {
  font-size: 24rpx;
  color: #4a5568;
  text-align: left;
  padding: 12rpx 20rpx;
  background: #f7fafc;
  border-radius: 12rpx;
  border-left: 4rpx solid #1890ff;
}