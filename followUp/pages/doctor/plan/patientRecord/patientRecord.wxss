/* pages/doctor/plan/patientRecord/patientRecord.wxss */

page {
  background: linear-gradient(180deg, #f0f7ff 0%, #ffffff 100%);
  min-height: 100vh;
}

.page-container {
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 分组标题 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.section-count {
  font-size: 24rpx;
  color: #718096;
  background: #edf2f7;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* 基本信息卡片（必填项网格布局） */
.basic-info-card {
  margin-bottom: 32rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx 32rpx;
}

.info-grid-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-grid-label {
  font-size: 24rpx;
  color: #718096;
  font-weight: 400;
}

.info-grid-value {
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 500;
  word-break: break-all;
}

/* 功能评估卡片列表 */
.functional-assessments {
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.assessment-card {
  padding: 32rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  border-left: 6rpx solid #4A90E2;
  transition: all 0.3s ease;
}

.assessment-card:active {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

.assessment-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.assessment-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.assessment-info {
  flex: 1;
}

.assessment-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
  gap: 16rpx;
}

.assessment-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  line-height: 1.4;
  flex: 1;
}

.assessment-score {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.score-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.score-value {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 700;
}

.assessment-description {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.5;
}

.assessment-questions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.assessment-question-item {
  padding: 20rpx;
  background: #f7fafc;
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90E2;
}

.question-label {
  font-size: 28rpx;
  color: #4a5568;
  font-weight: 500;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.question-answer {
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 500;
  padding: 12rpx 16rpx;
  background: #ffffff;
  border-radius: 8rpx;
  border: 1rpx solid #e5e7eb;
  line-height: 1.6;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #a0aec0;
}

/* AI状态标识 */
.ai-status-badge {
  font-size: 24rpx;
  color: #718096;
  background: #edf2f7;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.ai-status-badge.completed {
  color: #52c41a;
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
}

/* AI分析报告卡片 */
.ai-report-card {
  margin-bottom: 32rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

/* AI加载状态 */
.ai-loading {
  text-align: center;
  padding: 60rpx 0;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

.loading-text {
  font-size: 28rpx;
  color: #718096;
  margin-bottom: 24rpx;
}

.loading-progress {
  width: 300rpx;
  height: 8rpx;
  background: #edf2f7;
  border-radius: 4rpx;
  margin: 0 auto;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 报告区块 */
.report-section {
  margin-bottom: 32rpx;
}

.report-section:last-child {
  margin-bottom: 0;
}

.report-section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #e2e8f0;
  display: flex;
  align-items: center;
}

.report-section-title::before {
  content: '';
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(180deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 3rpx;
  margin-right: 12rpx;
}

.report-content {
  font-size: 28rpx;
  color: #4a5568;
  line-height: 1.8;
  padding: 20rpx;
  background: #f7fafc;
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90E2;
}

/* 详细分析项 */
.analysis-item {
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: #f7fafc;
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90E2;
}

.analysis-item:last-child {
  margin-bottom: 0;
}

.analysis-label {
  font-size: 26rpx;
  color: #718096;
  margin-bottom: 8rpx;
}

.analysis-value {
  font-size: 28rpx;
  color: #2d3748;
  line-height: 1.6;
  font-weight: 500;
}

/* 建议列表 */
.suggestions-list {
  padding: 0;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #4A90E2;
  margin-right: 16rpx;
  margin-top: 12rpx;
  flex-shrink: 0;
}

.suggestion-text {
  flex: 1;
  font-size: 28rpx;
  color: #4a5568;
  line-height: 1.8;
}

/* 操作按钮 */
.report-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #e2e8f0;
}

.action-button {
  flex: 1;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  background: #ffffff;
  border: 2rpx solid #4A90E2;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-button.primary {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.action-button.primary .button-text {
  color: #ffffff;
}

.action-button[disabled] {
  opacity: 0.6;
}

.button-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #4A90E2;
}
