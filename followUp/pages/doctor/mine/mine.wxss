/* 医生"我的"页面样式 - 现代化设计 */

page {
  background: linear-gradient(180deg, #e6f7ff 0%, #ffffff 100%);
  min-height: 100vh;
}

.page-container {
  padding: 24rpx;
  padding-bottom: 140rpx;
}

/* 个人信息头部 */
.profile-header {
  margin-bottom: 32rpx;
  padding: 32rpx 28rpx;
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  border-radius: 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(24, 144, 255, 0.35);
  position: relative;
  overflow: hidden;
}

.profile-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.avatar-section {
  display: flex;
  align-items: center;
  gap: 24rpx;
  position: relative;
  z-index: 1;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ffffff, #f0f9ff);
  color: #1890ff;
  font-size: 48rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
}

.status-badge.approved {
  background: rgba(82, 196, 26, 0.2);
  color: #ffffff;
}

.status-badge.pending {
  background: rgba(250, 173, 20, 0.2);
  color: #ffffff;
}

.status-badge.rejected {
  background: rgba(255, 77, 79, 0.2);
  color: #ffffff;
}

.status-icon {
  font-size: 22rpx;
}

/* 分组标题 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 信息卡片 */
.info-card {
  margin-bottom: 32rpx;
  padding: 28rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
}

.info-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: linear-gradient(180deg, #1890ff 0%, #40a9ff 100%);
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #edf2f7;
}

.info-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.info-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  min-width: 140rpx;
}

.label-icon {
  font-size: 28rpx;
}

.label-text {
  font-size: 28rpx;
  color: #4a5568;
  font-weight: 500;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 500;
}

.info-input {
  flex: 1;
  height: 72rpx;
  background: #f7fafc;
  border: 2rpx solid #edf2f7;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: all 0.3s;
}

.info-input:focus {
  border-color: #1890ff;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(24, 144, 255, 0.1);
}

/* 工作证卡片 */
.workcard-card {
  margin-bottom: 32rpx;
  padding: 28rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.upload-area {
  height: 280rpx;
  border-radius: 16rpx;
  border: 3rpx dashed #cbd5e0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
  transition: all 0.3s;
}

.upload-area:active {
  background: linear-gradient(135deg, #edf2f7 0%, #e2e8f0 100%);
  border-color: #1890ff;
}

.upload-icon {
  font-size: 96rpx;
  margin-bottom: 16rpx;
  color: #1890ff;
  font-weight: 300;
}

.upload-text {
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #718096;
}

.preview-area {
  border-radius: 16rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  background: #f7fafc;
}

.image-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.action-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 72rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.preview-button {
  background: linear-gradient(135deg, #e6f7ff, #bae7ff);
  color: #1890ff;
}

.preview-button:active {
  background: linear-gradient(135deg, #bae7ff, #91d5ff);
}

.delete-button {
  background: linear-gradient(135deg, #fff1f0, #ffccc7);
  color: #ff4d4f;
}

.delete-button:active {
  background: linear-gradient(135deg, #ffccc7, #ffa39e);
}

.button-icon {
  font-size: 28rpx;
}

/* 保存按钮 */
.save-button {
  margin-top: 32rpx;
  height: 100rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 32rpx rgba(24, 144, 255, 0.35);
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
}

.save-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.save-button:active::before {
  left: 100%;
}

.save-button:active {
  transform: scale(0.98);
}

.save-button.disabled {
  opacity: 0.6;
  pointer-events: none;
}

.save-button-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}
