/* pages/patient/profile/profile.wxss */
page {
  background: linear-gradient(180deg, #F0F7FF 0%, #FFFFFF 100%);
  min-height: 100vh;
}

.page-container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 表单卡片 */
.form-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1A1A1A;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F0F0F0;
  text-align: center;
}

/* 表单项 */
.form-item {
  margin-bottom: 28rpx;
}

.form-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 28rpx;
}

.half-item {
  flex: 1;
  margin-bottom: 0;
}

.label-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.required {
  color: #FF4D4F;
  font-size: 28rpx;
  margin-left: 6rpx;
}

/* 输入框 */
.input {
  width: 100%;
  height: 80rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #7BCA9A;
  background: #FFFFFF;
}

.input::placeholder {
  color: #BBBBBB;
}

/* 性别选择器 */
.gender-selector {
  display: flex;
  gap: 12rpx;
}

.gender-btn {
  flex: 1;
  height: 80rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.gender-btn.active {
  background: linear-gradient(135deg, #E8F4FD 0%, #FFFFFF 100%);
  border-color: #7BCA9A;
  border-width: 3rpx;
  box-shadow: 0 4rpx 12rpx rgba(123, 202, 154, 0.15);
}

.gender-text {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

.gender-btn.active .gender-text {
  color: #7BCA9A;
  font-weight: bold;
}

.gender-btn:active {
  transform: scale(0.98);
}

/* 日期选择器 */
.date-selector {
  height: 80rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.date-selector:active {
  background: #FFFFFF;
  border-color: #7BCA9A;
}

.date-text {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
  display: block;
  line-height: 28rpx;
  transform: translateY(-10rpx);
}

.date-text.placeholder {
  color: #BBBBBB;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #7BCA9A 0%, #5BA87D 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 24rpx;
  margin-top: 32rpx;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(123, 202, 154, 0.35);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0;
  position: relative;
  overflow: hidden;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(123, 202, 154, 0.3);
}

.submit-btn::after {
  border: none;
}

.submit-btn[loading] {
  background: linear-gradient(135deg, #94BEE5 0%, #7AA3D1 100%);
}

