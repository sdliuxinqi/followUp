/* 患者 - 随访详情页面样式 */
page {
  background: linear-gradient(180deg, #F0F7FF 0%, #FFFFFF 100%);
  min-height: 100vh;
}

.page-container {
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 随访计划信息卡片 */
.plan-info-card {
  background: linear-gradient(135deg, #7BCA9A 0%, #5BA87D 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(123, 202, 154, 0.25);
}

.plan-header {
  margin-bottom: 20rpx;
}

.plan-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 1.4;
}

.plan-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-right: 12rpx;
}

.meta-value {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 内容卡片 */
.section-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1A1A1A;
}

.section-count {
  font-size: 24rpx;
  color: #999999;
}

/* 答案列表 */
.answer-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.answer-item {
  padding: 20rpx;
  background: #F7F8FA;
  border-radius: 12rpx;
  border-left: 4rpx solid #7BCA9A;
}

.answer-question {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.question-number {
  font-size: 26rpx;
  font-weight: bold;
  color: #7BCA9A;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.question-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1A1A1A;
  line-height: 1.5;
}

.answer-value {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  padding-left: 32rpx;
}

/* AI报告卡片 */
.ai-report-card {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.report-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.report-summary {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
  text-align: center;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #E8F4FD 0%, #FFFFFF 100%);
  border-radius: 12rpx;
  width: 100%;
}

.report-details {
  width: 100%;
  margin-bottom: 24rpx;
}

.detail-item {
  padding: 16rpx 20rpx;
  margin-bottom: 12rpx;
  background: #F7F8FA;
  border-radius: 8rpx;
  display: flex;
  align-items: flex-start;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: #666666;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.6;
}

/* 下载按钮 */
.download-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #7BCA9A 0%, #5BA87D 100%);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(123, 202, 154, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.download-btn::after {
  border: none;
}

.download-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(123, 202, 154, 0.25);
}

.btn-icon {
  font-size: 32rpx;
}
