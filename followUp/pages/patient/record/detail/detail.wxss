/* 患者 - 随访详情页面样式 */
page {
  background: linear-gradient(180deg, #F0F7FF 0%, #FFFFFF 100%);
  min-height: 100vh;
}

.page-container {
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 随访计划信息卡片 */
.plan-info-card {
  background: linear-gradient(135deg, #7BCA9A 0%, #5BA87D 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(123, 202, 154, 0.25);
}

.plan-header {
  margin-bottom: 20rpx;
}

.plan-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 1.4;
}

.plan-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-right: 12rpx;
}

.meta-value {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 内容卡片 */
.section-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1A1A1A;
}

.section-count {
  font-size: 24rpx;
  color: #999999;
}

/* 基本信息网格布局 */
.basic-info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx 16rpx;
}

.basic-info-item {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.basic-info-label {
  font-size: 22rpx;
  font-weight: 500;
  color: #999999;
  line-height: 1.3;
}

.basic-info-value {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.4;
  font-weight: 500;
}

/* 答案列表（用于其他场景） */
.answer-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.answer-item {
  padding: 16rpx;
  background: #F7F8FA;
  border-radius: 10rpx;
  border-left: 4rpx solid #7BCA9A;
}

.answer-question {
  display: flex;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.question-number {
  font-size: 24rpx;
  font-weight: bold;
  color: #7BCA9A;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.question-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #1A1A1A;
  line-height: 1.4;
}

.answer-value {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  padding-left: 32rpx;
}

/* 功能评估区块 */
.functional-assessments {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.assessment-card {
  padding: 20rpx;
  border-radius: 12rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border-left: 4rpx solid #7BCA9A;
}

.assessment-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.assessment-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.assessment-info {
  flex: 1;
}

.assessment-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.assessment-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  line-height: 1.4;
  flex: 1;
}

.assessment-score {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #7BCA9A 0%, #5BA87D 100%);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.score-label {
  font-size: 22rpx;
  color: #FFFFFF;
}

.score-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.assessment-description {
  font-size: 22rpx;
  color: #718096;
  line-height: 1.4;
}

.assessment-questions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.assessment-question-item {
  padding: 16rpx;
  background: #f7fafc;
  border-radius: 10rpx;
}

.question-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.question-answer-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.question-answer {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
  flex: 1;
}

.question-score {
  font-size: 24rpx;
  font-weight: 600;
  color: #7BCA9A;
  flex-shrink: 0;
  background: #E6F7E6;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* AI报告卡片 */
.ai-report-card {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.report-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.report-summary {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
  text-align: center;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #E8F4FD 0%, #FFFFFF 100%);
  border-radius: 12rpx;
  width: 100%;
}

.report-details {
  width: 100%;
  margin-bottom: 24rpx;
}

.detail-item {
  padding: 16rpx 20rpx;
  margin-bottom: 12rpx;
  background: #F7F8FA;
  border-radius: 8rpx;
  display: flex;
  align-items: flex-start;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: #666666;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.6;
}

/* 下载按钮 */
.download-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #7BCA9A 0%, #5BA87D 100%);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(123, 202, 154, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.download-btn::after {
  border: none;
}

.download-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(123, 202, 154, 0.25);
}

.btn-icon {
  font-size: 32rpx;
}
