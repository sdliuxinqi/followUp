/* 患者首页 */
page {
  background: linear-gradient(180deg, #F0F7FF 0%, #FFFFFF 50%);
  min-height: 100vh;
}

/* 自定义导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #7BCA9A 0%, #5BA87D 100%);
  z-index: 999;
  box-shadow: 0 4rpx 20rpx rgba(123, 202, 154, 0.3);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 24rpx;
}

/* 左侧返回按钮 */
.nav-left {
  width: 80rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.back-icon {
  width: 44rpx;
  height: 44rpx;
  filter: brightness(0) invert(1);
}

/* 中间标题 */
.nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 1rpx;
}

/* 右侧占位 */
.nav-right {
  width: 80rpx;
}

.page-container {
  padding: 24rpx 24rpx 120rpx 24rpx;
  /* padding-top 通过内联样式动态设置，避免被导航栏遮挡 */
}

/* 快速操作区域 */
.quick-actions {
  margin-bottom: 32rpx;
}

.action-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.action-card:active {
  transform: scale(0.98);
}

.scan-card {
  border: 2rpx solid #7BCA9A;
}

.action-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #E8F4FD 0%, #FFFFFF 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.action-icon {
  font-size: 40rpx;
}

.qr-icon {
  font-size: 48rpx;
  font-weight: bold;
  color: #7BCA9A;
}

.action-content {
  flex: 1;
}

.action-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1A1A1A;
  margin-bottom: 6rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #666666;
}

.action-arrow {
  font-size: 48rpx;
  color: #7BCA9A;
  font-weight: 300;
}

/* 随访记录区域 */
.records-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1A1A1A;
}

.record-count {
  font-size: 24rpx;
  color: #999999;
}

.follow-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.follow-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.follow-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.follow-info {
  flex: 1;
}

.follow-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1A1A1A;
  margin-bottom: 12rpx;
}

.follow-meta {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.doctor-name {
  font-size: 26rpx;
  color: #666666;
}

.follow-time {
  font-size: 24rpx;
  color: #999999;
}

.arrow-icon {
  margin-left: 16rpx;
  font-size: 48rpx;
  color: #CCCCCC;
  font-weight: 300;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  line-height: 1.6;
  max-width: 400rpx;
}
