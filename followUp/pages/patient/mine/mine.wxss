/* 患者 "我的" 页面样式 */
page {
  background: linear-gradient(180deg, #F0F7FF 0%, #FFFFFF 50%);
  min-height: 100vh;
}

.page-container {
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #7BCA9A 0%, #5BA87D 100%);
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(123, 202, 154, 0.25);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
}

.avatar-text {
  font-size: 44rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.user-role {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 菜单区域 */
.menu-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666666;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.menu-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  transition: all 0.3s ease;
  border-bottom: 1rpx solid #F5F5F5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #F8F9FA;
}

.menu-icon {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #E8F4FD 0%, #FFFFFF 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1A1A1A;
  margin-bottom: 6rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999999;
}

.menu-arrow {
  font-size: 48rpx;
  color: #CCCCCC;
  font-weight: 300;
  margin-left: 16rpx;
}

/* 版本信息 */
.version-info {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.version-text {
  font-size: 24rpx;
  color: #BBBBBB;
}