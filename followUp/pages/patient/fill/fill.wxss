/* pages/patient/fill/fill.wxss */
page {
  background: linear-gradient(180deg, #F0FFF4 0%, #FFFFFF 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.page-container {
  padding: 24rpx;
}

/* 头部 */
.header {
  margin-bottom: 24rpx;
  padding: 0 16rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  text-align: center;
  letter-spacing: 2rpx;
  line-height: 1.4;
  position: relative;
  padding-bottom: 16rpx;
}

.title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 160rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #7BCA9A 0%, #5BA87D 100%);
  border-radius: 3rpx;
}

/* 问题容器 */
.question-container {
  margin-bottom: 24rpx;
}

/* 基本信息卡片 */
.basic-info-card {
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 需填写的字段卡片 */
.fillable-info-card {
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.fillable-info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx 20rpx;
}

.fillable-info-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.fillable-info-label {
  font-size: 22rpx;
  font-weight: 500;
  color: #999999;
  line-height: 1.4;
  order: 1;
}

.fillable-info-input-wrapper {
  display: flex;
  align-items: center;
  order: 2;
  width: 100%;
}

/* 日期选择器 picker 容器 */
.fillable-date-picker {
  display: block;
  width: 100%;
  height: 72rpx;
}

/* 体重等可编辑输入框的背景和边框样式 */
.fillable-info-input {
  width: 100%;
  min-height: 72rpx;
  padding: 16rpx 16rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.fillable-info-picker {
  width: 100%;
  height: 72rpx;
  padding: 0 16rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

/* 日期选择器内部容器 - 使用 flex 实现垂直居中 */
.date-selector {
  width: 100%;
  height: 72rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 8rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.date-selector:active {
  background: #FFFFFF;
  border-color: #7BCA9A;
}

/* 日期选择器文字 */
.date-text {
  font-size: 26rpx;
  color: #333333;
  white-space: nowrap;
  text-overflow: ellipsis;
  transform: translateY(-15rpx); /* 略微上移，让“请选择日期”更接近视觉中线偏上一点 */
}

.date-text.placeholder {
  color: #BBBBBB;
}

.fillable-info-input:focus {
  border-color: #7BCA9A;
  background: #FFFFFF;
}

.basic-info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx 20rpx;
}

.basic-info-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.basic-info-label {
  font-size: 22rpx;
  font-weight: 500;
  color: #999999;
  line-height: 1.4;
  order: 1;
}

.basic-info-input-wrapper {
  order: 2;
  width: 100%;
  display: flex;
  align-items: center; /* 让 basic 区的 picker/view 垂直居中 */
}

/* 基本信息区的日期选择器 picker 容器 */
.basic-date-picker {
  display: block;
  width: 100%;
  height: 72rpx;
}

.basic-info-input {
  width: 100%;
  min-height: 72rpx;
  padding: 16rpx 16rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.basic-info-input:focus {
  border-color: #7BCA9A;
  background: #FFFFFF;
}

.basic-info-input.readonly-input {
  background: #F5F5F5;
  color: #666666;
}

.basic-info-text {
  width: 100%;
  min-height: 72rpx;
  padding: 16rpx 16rpx;
  background: #F5F5F5;
  border: 2rpx solid #E8E8E8;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.basic-info-text-value {
  font-size: 26rpx;
  line-height: 30rpx;
  color: #666666;
}

.basic-info-select {
  display: flex;
  align-items: center;
  min-height: 72rpx;
  padding: 16rpx 16rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.basic-info-select radio-group {
  display: flex;
  flex-direction: row;
  gap: 32rpx;
  align-items: center;
  width: 100%;
}

.basic-info-option {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.basic-info-option radio {
  transform: scale(1);
  margin-right: 0;
}

.basic-info-option-text {
  font-size: 26rpx;
  color: #333333;
  white-space: nowrap;
  line-height: 1.5;
}

.question-item {
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.question-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #999999;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

/* 文本输入 */
.answer-input {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 32rpx;
  color: #333333;
  box-sizing: border-box;
}

.answer-input:focus {
  border-color: #7BCA9A;
  background: #FFFFFF;
}

/* 只读输入框样式 */
.answer-input.readonly-input {
  background: #F5F5F5;
  color: #666666;
  cursor: not-allowed;
}

.answer-input.readonly-input:focus {
  border-color: #E8E8E8;
  background: #F5F5F5;
}

.placeholder-text {
  color: #BBBBBB;
}

/* 滑杆评分 */
.slider-container {
  padding: 16rpx 0;
}

.answer-slider {
  width: 100%;
  margin-bottom: 12rpx;
}

.slider-value {
  display: block;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #7BCA9A;
}

/* 选项容器 */
.options-container {
  padding-top: 6rpx;
}

.radio-group,
.checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.option-item:active {
  background: #E6F7E6;
  border-color: #7BCA9A;
}

radio,
checkbox {
  transform: scale(1.2);
  margin-right: 16rpx;
}

.option-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

/* 只读选项容器 */
.options-container.readonly-options {
  opacity: 0.7;
}

.options-container.readonly-options .option-item {
  pointer-events: none;
}

/* 功能评估卡片 */
.functional-assessments {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.assessment-card {
  padding: 20rpx;
  border-radius: 12rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border-left: 4rpx solid #7BCA9A;
}

.assessment-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.assessment-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.assessment-info {
  flex: 1;
}

.assessment-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 6rpx;
  line-height: 1.4;
}

.assessment-description {
  font-size: 22rpx;
  color: #718096;
  line-height: 1.4;
}

.assessment-questions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.assessment-question-item {
  padding: 16rpx;
  background: #f7fafc;
  border-radius: 10rpx;
}

.assessment-question-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.option-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.option-score {
  font-size: 24rpx;
  color: #7BCA9A;
  font-weight: 600;
  flex-shrink: 0;
}

/* 视频上传 */
.video-upload {
  padding-top: 8rpx;
}

.upload-btn {
  width: 100%;
  height: 200rpx;
  border: 2rpx dashed #7BCA9A;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #7BCA9A;
  background: #F6FFED;
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: #E6F7E6;
}

.video-preview {
  position: relative;
}

.video-preview video {
  width: 100%;
  border-radius: 12rpx;
}

.delete-btn {
  margin-top: 16rpx;
  text-align: center;
  padding: 16rpx;
  background: #FFF1F0;
  color: #FF4D4F;
  font-size: 26rpx;
  border-radius: 8rpx;
}

/* 提交容器 */
.submit-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx;
  background: #FFFFFF;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #7BCA9A 0%, #5BA87D 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(123, 202, 154, 0.35);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(123, 202, 154, 0.3);
}

.submit-btn::after {
  border: none;
}

.submit-btn[loading] {
  background: linear-gradient(135deg, #95DE64 0%, #73D13D 100%);
}

/* 视频拍摄提示弹窗 */
.video-tip-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.video-tip-container {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.video-tip-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.video-tip-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.video-tip-close {
  font-size: 48rpx;
  color: #999999;
  line-height: 1;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.video-tip-content {
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.video-tip-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
  word-break: break-all;
  text-align: center;
}

.video-tip-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx 32rpx;
  border-top: 2rpx solid #F0F0F0;
}

.video-tip-cancel-btn,
.video-tip-confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: none;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.video-tip-cancel-btn {
  background: #F5F5F5;
  color: #666666;
}

.video-tip-confirm-btn {
  background: linear-gradient(135deg, #7BCA9A 0%, #5BA87D 100%);
  color: #FFFFFF;
  font-weight: 600;
}

.video-tip-cancel-btn:active {
  background: #E8E8E8;
}

.video-tip-confirm-btn:active {
  opacity: 0.9;
}

.video-tip-cancel-btn::after,
.video-tip-confirm-btn::after {
  border: none;
}

