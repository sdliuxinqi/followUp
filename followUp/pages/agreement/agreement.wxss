/* pages/agreement/agreement.wxss */
.agreement-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.agreement-header {
  padding: 30rpx 0;
  border-bottom: 1px solid #e0e0e0;
  margin-bottom: 30rpx;
}

.agreement-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.agreement-content {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.agreement-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}