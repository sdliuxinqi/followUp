/* pages/patient/fill/fill.wxss */
page {
  background: linear-gradient(180deg, #F0FFF4 0%, #FFFFFF 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.page-container {
  padding: 32rpx;
}

/* 头部 */
.header {
  margin-bottom: 40rpx;
  padding: 0 16rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
  text-align: center;
  letter-spacing: 2rpx;
  line-height: 1.4;
  position: relative;
  padding-bottom: 24rpx;
}

.title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 160rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #7BCA9A 0%, #5BA87D 100%);
  border-radius: 3rpx;
}

/* 问题容器 */
.question-container {
  margin-bottom: 32rpx;
}

/* 基本信息卡片 */
.basic-info-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.basic-info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx 24rpx;
}

.basic-info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.basic-info-item.full-width {
  grid-column: 1 / -1;
}

.basic-info-label {
  font-size: 22rpx;
  font-weight: 500;
  color: #999999;
  line-height: 1.4;
  order: 1;
}

.basic-info-input-wrapper {
  order: 2;
  width: 100%;
}

.basic-info-input {
  width: 100%;
  min-height: 64rpx;
  padding: 16rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 30rpx;
  color: #333333;
  box-sizing: border-box;
}

.basic-info-input:focus {
  border-color: #7BCA9A;
  background: #FFFFFF;
}

.basic-info-input.readonly-input {
  background: #F5F5F5;
  color: #666666;
}

.basic-info-select {
  width: 100%;
  min-height: 64rpx;
  padding: 12rpx 16rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.basic-info-radio-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.basic-info-option {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 32rpx;
}

.basic-info-option:last-child {
  margin-right: 0;
}

.basic-info-radio {
  transform: scale(0.9);
  margin-right: 8rpx;
}

.basic-info-option-text {
  font-size: 26rpx;
  color: #333333;
  white-space: nowrap;
  line-height: 1.5;
}

/* 需填写的字段卡片 */
.fillable-info-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.fillable-info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx 24rpx;
}

.fillable-info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.fillable-info-label {
  font-size: 22rpx;
  font-weight: 500;
  color: #999999;
  line-height: 1.4;
  order: 1;
}

.fillable-info-input-wrapper {
  order: 2;
  width: 100%;
}

.fillable-info-input {
  width: 100%;
  min-height: 64rpx;
  padding: 16rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 30rpx;
  color: #333333;
  box-sizing: border-box;
}

.fillable-info-input:focus {
  border-color: #7BCA9A;
  background: #FFFFFF;
}

.question-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 问题头部 */
.question-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  gap: 12rpx;
}

.question-number {
  flex-shrink: 0;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  background: linear-gradient(135deg, #7BCA9A 0%, #5BA87D 100%);
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 50%;
}

.question-text {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 44rpx;
}

.required {
  color: #FF4D4F;
  font-size: 32rpx;
  font-weight: bold;
  flex-shrink: 0;
}

/* 文本输入 */
.answer-input {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 32rpx;
  color: #333333;
  box-sizing: border-box;
}

.answer-input:focus {
  border-color: #7BCA9A;
  background: #FFFFFF;
}

.placeholder-text {
  color: #BBBBBB;
}

/* 滑杆评分 */
.slider-container {
  padding: 20rpx 0;
}

.answer-slider {
  width: 100%;
  margin-bottom: 16rpx;
}

.slider-value {
  display: block;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #7BCA9A;
}

/* 选项容器 */
.options-container {
  padding-top: 8rpx;
}

.radio-group,
.checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #F7F8FA;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.option-item:active {
  background: #E6F7E6;
  border-color: #7BCA9A;
}

radio,
checkbox {
  transform: scale(1.2);
  margin-right: 16rpx;
}

.option-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

/* 视频上传 */
.video-upload {
  padding-top: 8rpx;
}

.upload-btn {
  width: 100%;
  height: 200rpx;
  border: 2rpx dashed #7BCA9A;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #7BCA9A;
  background: #F6FFED;
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: #E6F7E6;
}

.video-preview {
  position: relative;
}

.video-preview video {
  width: 100%;
  border-radius: 12rpx;
}

.delete-btn {
  margin-top: 16rpx;
  text-align: center;
  padding: 16rpx;
  background: #FFF1F0;
  color: #FF4D4F;
  font-size: 26rpx;
  border-radius: 8rpx;
}

/* 提交容器 */
.submit-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx;
  background: #FFFFFF;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #7BCA9A 0%, #5BA87D 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(123, 202, 154, 0.35);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(123, 202, 154, 0.3);
}

.submit-btn::after {
  border: none;
}

.submit-btn[loading] {
  background: linear-gradient(135deg, #95DE64 0%, #73D13D 100%);
}

